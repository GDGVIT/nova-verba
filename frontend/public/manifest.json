{
  "name": "NovaVerba",
  "description": "A chrome extension for remembering new words",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
      "default_popup": "index.html",
      "default_title": "NovaVerba"
  },
  "icons": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
  },
  "permissions": [
    "clipboardRead",
    "clipboardWrite",
    "cookies",
    "notifications",
    "storage",
    "sessions",
    "system.storage"
  ]
}
